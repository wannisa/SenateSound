<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.myapplication.MainActivity"
    android:background="#ffffff">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="คำแปล"
        android:id="@+id/texeView"
        android:background="#2a6d28"
        android:textColor="#faf6f6"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:text="&lt; กลับ"
        android:id="@+id/back"
        android:background="#2a6d28"
        android:textColor="#faf6f6"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="Onclikblack"/>

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:background="#2a6d28"
        android:id="@+id/imageView"
        android:layout_alignTop="@+id/texeView"
        android:layout_alignRight="@+id/texeView"
        android:layout_alignEnd="@+id/texeView"
        android:src="@android:drawable/ic_menu_info_details" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="สำนวนไทย"
        android:id="@+id/sumnonT"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_below="@+id/texeView"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/imageViewT"
        android:src="@drawable/th"
        android:layout_above="@+id/showThai"
        android:layout_toRightOf="@+id/sumnonT"
        android:layout_toEndOf="@+id/sumnonT" />
    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="สำนวนอังกฤษ"
        android:id="@+id/sumnon"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_below="@+id/texeView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="200dp" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:id="@+id/imageView2"
        android:src="@drawable/en"
        android:layout_alignTop="@+id/sumnon"
        android:layout_toRightOf="@+id/sumnon"
        android:layout_toEndOf="@+id/sumnon" />

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:id="@+id/showThai"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/sumnonT"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:id="@+id/showEng"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/sumnon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton"
        android:background="@drawable/sound"
        android:layout_above="@+id/showThai"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton2"
        android:background="@drawable/sound"
        android:layout_alignTop="@+id/imageView2"
        android:layout_alignLeft="@+id/imageButton"
        android:layout_alignStart="@+id/imageButton" />

</RelativeLayout>